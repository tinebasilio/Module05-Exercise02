<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module05Exercise01.View.ViewEmployee"
             Shell.NavBarIsVisible="False"
             Background="MintCream">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,50"
            Spacing="25">
            
            <Label 
                Text="Contacts"
                HorizontalOptions="CenterAndExpand"
                FontSize="Medium"
                FontFamily="ManropeSemibold"/>

            <ListView ItemsSource="{Binding EmployeeList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}"/>
                                <Label Text="{Binding Address}"/>
                                <Label Text="{Binding Email}"/>
                                <Label Text="{Binding ContactNo}"/>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:EmployeeViewModel}},Path=SelectedEmployeeCommand}"
                                    CommandParameter="{Binding .}"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Load Data" 
                    Command="{Binding LoadDataCommand}"
                    BackgroundColor="#1d89e4"/>

            <Label 
              Text="Add New Employee"
              FontSize="20" 
              HorizontalOptions="Center" 
              Margin="0,0,0,25"/>

            <Entry Placeholder="Name" Text="{Binding NewEmployeelName}" Margin="0,0,0,15"/>
            <Entry Placeholder="Address" Text="{Binding NewEmployeeAddress}" Margin="0,0,0,15"/>
            <Entry Placeholder="Email" Text="{Binding NewEmployeeEmail}" Margin="0,0,0,15"/>
            <Entry Placeholder="Contact Number" Text="{Binding NewEmployeeContactNo}" Margin="0,0,0,15"/>

            <Button 
             Text="Add Person" 
             Command="{Binding AddEmployeeCommand}"
             Margin="0,10,0,25"/>

            <Button 
             Text="Delete Person" 
             Command="{Binding DeleteEmployeeCommand}" IsEnabled="{Binding IsEmployeeSelected}" 
             Margin="0,10,0,25"/>

            <Label x:Name="ConnectionStatusLabel"
                   Text="{Binding StatusMessage}"
                   FontSize="13"
                   HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>